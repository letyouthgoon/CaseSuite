<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/toast_alert_bg"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/insert_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/insert_text"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insert_text_tv"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/public_edit"
            android:gravity="left"
            android:hint="@string/insert_hint_et"
            android:padding="10dp"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_name"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/public_white_round_select"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dialog_ok"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/public_blue_round_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/sure"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>