<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffafafa"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#F07613" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="5.0dip" >

            <ImageView
                android:id="@id/imageBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_back_default"
                android:gravity="center_vertical" />

            <TextView
                android:id="@id/textGoodsTabTitleName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="5.0dip"
                android:text="意见反馈"
                android:textColor="#ffffffff"
                android:textSize="18.0dip" />

            <TextView
                android:id="@id/textFavritesEditButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5.0dip"
                android:gravity="center_vertical"
                android:padding="5.0dip"
                android:text="完成"
                android:textColor="#ffffffff"
                android:textSize="16.0dip" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="9"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1.0" >

            <EditText
                android:id="@id/more_feedback_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/text_border"
                android:drawSelectorOnTop="false"
                android:gravity="top"
                android:hint="请输入您的宝贵意见"
                android:textColorHint="#ffaaaaaa"
                android:textSize="15.0sp" />
        </RelativeLayout>

        <TextView
            android:id="@id/text_more_feedback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="13.0dip"
            android:text="@string/tel"
            android:textColor="#ffd9434e"
            android:textSize="13.0sp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>