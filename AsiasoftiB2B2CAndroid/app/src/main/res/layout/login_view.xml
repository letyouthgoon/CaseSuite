<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#ffffffff">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="1"
    android:background="#F07613">
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
      <TextView 
          android:id="@id/buttonBack"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="返回"
          android:textSize="15dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dip"
          android:textColor="#ffffffff"/>
       <TextView 
          android:id="@+id/buttonZ"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="注册"
          android:textSize="15dp"
          android:layout_gravity="center_vertical"
          android:textColor="#ffffffff"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10dip"
          android:layout_centerVertical="true"/>
       </RelativeLayout>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="9"
    android:orientation="vertical"
    android:background="#F1F5FB">
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="70.0dip"
        android:orientation="vertical" >

        <EditText
            android:id="@id/editLoginName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:background="@drawable/frame_search"
            android:drawableLeft="@drawable/login_username_icona"
            android:drawablePadding="10.0dip"
            android:hint="用户名/邮箱"
            android:paddingBottom="8.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="5.0dip"
            android:paddingTop="8.0dip"
            android:singleLine="true" 
            android:textSize="16.0dip" />

        <EditText
            android:id="@id/editLoginPassWord"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/frame_search"
            android:drawableLeft="@drawable/login_psw_icona"
            android:drawablePadding="10.0dip"
            android:hint="密码"
            android:paddingBottom="8.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="5.0dip"
            android:paddingTop="8.0dip"
            android:password="true"
            android:singleLine="true"
            android:textSize="16.0dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="40.0dip"
        android:orientation="vertical" >

      

        <Button
            android:id="@id/buttonLoginSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_submit_button"
            android:text="立即登陆"
            android:textColor="#ffffffff"
            android:textSize="16.0dip"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
  

  

</LinearLayout>