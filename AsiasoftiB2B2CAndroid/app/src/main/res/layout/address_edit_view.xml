<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffafafa"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="1"
    android:background="#F07613">
      <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:padding="5.0dip" >

        <ImageView
            android:id="@id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back_default"
            android:gravity="center_vertical" />

        <TextView
            android:id="@id/textGoodsTabTitleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="地址管理"
            android:textColor="#ffffffff"
            android:textSize="18.0dip" />

        <TextView
            android:id="@id/textSendCityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:gravity="center_vertical"
            android:padding="5.0dip"
            android:text="保存"
            android:textColor="#ffffffff"
            android:textSize="16.0dip" />
    </RelativeLayout>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="9"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@id/editAddressName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/tb_bg_login_input_hl"
            android:hint="请输入姓名"
            android:padding="10.0dip"
            android:textColor="#ff6d6d6d"
            android:textSize="15.0dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/divider02"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/editAddressInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/tb_bg_login_input_hl"
                android:padding="10.0dip"
                android:text="地址信息"
                android:textColor="#ff6d6d6d"
                android:textSize="15.0dip" />

            <TextView
                android:id="@id/textEditAddressInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff5400"
                android:padding="10.0dip"
                android:text="编辑"
                android:textColor="#ffffffff"
                android:textSize="15.0dip" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/divider02"
            android:visibility="gone" />

        <LinearLayout
            android:id="@id/linearLayoutSelectCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@id/textCityID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请选择城市"
                android:padding="10.0dip"
                android:textColor="#ff6d6d6d"
                android:textSize="15.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/divider02" />

            <TextView
                android:id="@id/textRegionID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请选择地区"
                android:padding="10.0dip"
                android:textColor="#ff6d6d6d"
                android:textSize="15.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/divider02" />

            <TextView
                android:id="@id/textAddressID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请选择地址"
                android:padding="10.0dip"
                android:textColor="#ff6d6d6d"
                android:textSize="15.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@drawable/divider02" />
        </LinearLayout>

        <EditText
            android:id="@id/editJieDaoAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/tb_bg_login_input_hl"
            android:hint="请输入街道地址"
            android:padding="10.0dip"
            android:textColor="#ff6d6d6d"
            android:textSize="15.0dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/divider02"
            android:visibility="gone" />

        <EditText
            android:id="@id/editAddressMobPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/tb_bg_login_input_hl"
            android:hint="请输入手机号码"
            android:padding="10.0dip"
            android:textColor="#ff6d6d6d"
            android:textSize="15.0dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/divider02"
            android:visibility="gone" />

        <EditText
            android:id="@id/editAddressTelPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/tb_bg_login_input_hl"
            android:hint="请输入固定电话"
            android:padding="10.0dip"
            android:textColor="#ff6d6d6d"
            android:textSize="15.0dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@drawable/divider02"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@id/buttonDelete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/add_to_car_button_normal"
        android:paddingBottom="10.0dip"
        android:paddingLeft="30.0dip"
        android:paddingRight="30.0dip"
        android:paddingTop="10.0dip"
        android:text="删除"
        android:textColor="#ffffffff"
        android:textSize="16.0dip" />
</LinearLayout>
  

    

</LinearLayout>