<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffafafa"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="1"
    android:background="#F07613">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:padding="5.0dip" >

        <ImageView
            android:id="@id/imageBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_back_default"
            android:gravity="center_vertical" />

        <TextView
            android:id="@id/textGoodsTabTitleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="浏览历史"
            android:textColor="#ffffffff"
            android:textSize="18.0dip" />

        <TextView
            android:id="@id/textFavritesEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:gravity="center_vertical"
            android:padding="5.0dip"
            android:text="编辑"
            android:textColor="#ffffffff"
            android:textSize="16.0dip"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="9">
       <ListView
        android:id="@id/listViewHostoryBrowse"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#fff5f5f5"
        android:divider="@drawable/cart_listview_gap"
        android:fadingEdge="none"
        android:listSelector="#fff5f5f5" />
</LinearLayout>
    

 

</LinearLayout>