<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F1F5FB">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:layout_margin="8dip"
        android:orientation="vertical" 
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="2" 
            android:background="@drawable/corners_co"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            
            <TextView
                android:id="@+id/list_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:ellipsize="end"
                android:lines="1"
                android:text="海淀区丹棱街1号欧美汇购物中心"
                android:layout_centerVertical="true"
                android:textColor="#ff000000"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="8" 
            android:background="@drawable/corners_c">
             <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >


            <ImageView
                android:id="@+id/imageview"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:background="@drawable/default_goods_image_240" />

            <LinearLayout
                android:id="@+id/linea"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" 
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/imageXingJi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" 
                    android:layout_marginLeft="5dip"/>

                <TextView
                    android:id="@+id/textEvaluationCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3.0dip"
                    android:singleLine="true"
                    android:text="评价人数: 1123人"
                    android:textColor="#ff909090"
                    android:textSize="15.0dip" />
            </LinearLayout>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:text="￥"
                android:textColor="#D33939"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text2"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/text2"
                android:text="1000"
                android:textSize="13dip" />
            
            <ImageView 
                android:id="@+id/imageXianShiPricePromotionTypea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/list_price"/>
            <ImageView 
                android:id="@+id/imageGroupPricePromotionTypea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/imageXianShiPricePromotionTypea"/>
            
            
            
            <Button 
                android:id="@+id/list_map"
                android:layout_height="30dip"
                android:layout_width="70dip"
                android:layout_below="@id/list_price"
                android:background="@drawable/ditu01"
                android:focusable="false"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="5dip"/>
            <Button 
                android:id="@+id/list_phone "
                android:layout_height="30dip"
                android:layout_width="70dip"
                android:layout_toRightOf="@id/list_map"
                android:focusable="false"
                android:layout_alignBottom="@id/list_map"
                android:background="@drawable/dianhu01"
                android:layout_marginLeft="10dip"/>
        </RelativeLayout>
        </LinearLayout>

       
    </LinearLayout>

</LinearLayout>